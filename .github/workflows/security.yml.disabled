name: Security Scan

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]
  schedule:
    - cron: '30 1 * * 0' # Weekly scan on Sundays

jobs:
  security-audit:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0 # Required for Trufflehog
      
      # 1. Static Application Security Testing (SAST)
      - name: CodeQL Scan Init
        uses: github/codeql-action/init@v3
        with:
          languages: javascript
          
      - name: Perform CodeQL Analysis
        uses: github/codeql-action/analyze@v3
        
      # 2. Dependency Vulnerability Search
      - name: Setup Node for npm audit
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Install Dependencies
        run: npm ci

      - name: Run NPM Audit (High & Critical Only)
        run: npm audit --audit-level=high

      # Snyk fallback/alternative (requires secret token, disabled by default unless SNYK_TOKEN is present)
      - name: Run Snyk to check for vulnerabilities
        uses: snyk/actions/node@master
        continue-on-error: true # Don't block if token isn't setup
        env:
          SNYK_TOKEN: ${{ secrets.SNYK_TOKEN }}
        with:
          args: --severity-threshold=high
          
      # 3. Secret Leakage Scanning
      - name: Run TruffleHog Secret Scan
        uses: trufflesecurity/trufflehog@main
        with:
          path: ./
          base: ${{ github.event.repository.default_branch }}
          head: HEAD
          extra_args: --debug --only-verified
          
      # 4. Container / OS Level Library Scanning
      - name: Container Scan (Trivy)
        uses: aquasecurity/trivy-action@master
        with:
          scan-type: 'fs' # Since we don't have a Docker image in the repo yet, we scan the filesystem
          scan-ref: '.'
          format: 'table'
          exit-code: '1'
          ignore-unfixed: true
          vuln-type: 'os,library'
          severity: 'CRITICAL,HIGH'
